<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Library</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
	</head>
	<body class="bg-dark text-white">
		<%- include('./partials/navbar') %> <% if(data.length > 0) { %>
		<h1 class="text-light text-center m-5">All Books</h1>
		<table class="table table-striped table-bordered table-secondary">
			<tr>
				<th>ID</th>
				<th>Book Name</th>
				<th>Author</th>
				<th>Price</th>
                <th></th>
                <th></th>
			</tr>
			<% data.forEach(element => { %>
			<tr>
				<td><%- element._id %></td>
				<td><%- element.name %></td>
				<td><%- element.author %></td>
				<td>â‚¹ <%- element.price %></td>
                <td>
					<form action="/update/<%-element._id %>" method="GET">
						<button type="submit" class="btn btn-primary">Update</button>
					</form>
				</td>
                <td>
					<form action="/<%-element._id %>?_method=DELETE" method="GET">
						<button type="submit" class="btn btn-primary">Update</button>
					</form>
				</td>
			</tr>
			<% }); %>
		</table>
		<% } else {%>
		<h1 class="text-center mt-5">No Books Found!</h1>
		<a href="/add" class="btn btn-primary" style="margin-left: 47vw">Add a Book</a>
		<% } %>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	</body>
</html>
